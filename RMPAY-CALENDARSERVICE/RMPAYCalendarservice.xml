<service>
    <id>RMPAYCALENDAR</id>
    <name>RMPAY Calendar Service</name>
    <description>Servicio para la API REST de RMPAY Calendar (Spring Boot).</description>

    <executable>%BASE%\jdk-20\bin\java.exe</executable>
    <arguments>-Xmx512m -jar "C:\RMPAY-CALENDARSERVICE/RMPAYCalendarservice.jar"</arguments>

    <env name="JAVA_HOME" value="%BASE%\jdk-20"/>

    <workingdirectory>%BASE%</workingdirectory>

    <log mode="roll-by-size">
        <sizeThreshold>10240</sizeThreshold>
        <keepPeriod>30</keepPeriod>
    </log>

</service>